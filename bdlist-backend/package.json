{
  "name": "shuttleday-server",
  "version": "1.1.2",
  "description": "API Server for shuttleday.info",
  "exports": "./dist/index.js",
  "type": "module",
  "engines": {
    "npm": ">=9.0.0 <10.0.0",
    "node": ">=18.0.0 <19.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "build": "rm -rf dist/ && tsc --build",
    "test": "pnpm run startTestDb; jest; pnpm run stopTestDb; docker volume prune -f",
    "test:jestonly": "jest",
    "startTestDb": "docker compose -f src/tests/seedDb/docker-compose.yml up -d --build",
    "stopTestDb": "docker compose -f src/tests/seedDb/docker-compose.yml down",
    "ci:test": "NODE_ENV=test jest -i"
  },
  "keywords": [],
  "author": "Shuttleday",
  "license": "WTFPL",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.454.0",
    "@aws-sdk/s3-request-presigner": "^3.454.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.2",
    "file-type": "^18.7.0",
    "google-auth-library": "^8.9.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.9.1",
    "pino": "^8.16.2",
    "pino-pretty": "^9.4.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/config": "^3.3.3",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.4.4",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.18.10",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "pnpm": "^7.33.6",
    "semantic-release": "^21.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
